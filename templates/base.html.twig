<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Min Portefolie{% endblock %}</title>

        <!-- Favicon & App Icons -->
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('site.webmanifest') }}">


        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body
            data-controller="background-grid"
            data-background-grid-icons-value='[
    "/icons/bulp.svg",
    "/icons/docker.svg",
    "/icons/pen.svg",
    "/icons/html.svg",
    "/icons/javascript.svg",
    "/icons/wordpress.svg",
    "/icons/mouse.svg",
    "/icons/php.svg",
    "/icons/symfony.svg",
    "/icons/laptop.svg",
    "/icons/react.svg",
    "/icons/github.svg",
    "/icons/laravel.svg"
  ]'
            data-background-grid-size-value="50"
            data-background-grid-rows-value="6"
    >

        {% include 'components/_nav.html.twig' %}
        {% block body %}
        {% endblock %}
        {% include 'components/_footer.html.twig' %}
        <a href="#"
           data-controller="back-to-top"
           data-action="click->back-to-top#scrollToTop"
           class="fixed bottom-6 right-6 z-50 bg-yellow-300 text-white text-2xl w-12 h-12 items-center justify-center leading-none rounded-full shadow-lg hover:bg-yellow-700 transition-all duration-300"
           id="back-to-top"
           aria-label="Back to top">
            â†‘
        </a>



    </body>
</html>
