{% trans_default_domain 'more_about' %}

<section id="more-about"
         class="py-24 mt-40 bg-white text-yellow-800 eb-garamond-regular px-6 text-base leading-relaxed">
    <div class="max-w-6xl mx-auto space-y-10">

        <!-- Heading -->
        <div class="space-y-4">
            <div class="w-20 border-t-8 border-yellow-500"></div>
            <h2 class="text-4xl font-bold text-yellow-600">{{ 'heading'|trans }}</h2>
        </div>

        <!-- Content Grid -->
        <div class="grid md:grid-cols-2 gap-12 items-start">
            <!-- Text -->
            <div class="space-y-6 text-[1.125rem]">
                <p>{{ 'paragraph_1'|trans({'{{ age }}': "now"|date('Y') - 1989})|raw }}</p>
                <p>{{ 'paragraph_2'|trans|raw }}</p>
                <p>{{ 'paragraph_3'|trans }}</p>
            </div>

            <!-- Image -->
            <div>
                <img src="{{ asset('images/minfamilie.png') }}" alt="Martin familie"
                     class="w-full object-cover max-h-[400px]">
            </div>
        </div>
    </div>
</section>
