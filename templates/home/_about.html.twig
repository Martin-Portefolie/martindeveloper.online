{% trans_default_domain 'about' %}

<section
        id="about"
        class="mt-40 py-24 bg-white text-yellow-900 px-6 eb-garamond-regular text-base leading-relaxed"
>
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-16 items-start">

        <!-- Left: Intro -->
        <div class="lg:w-1/2 space-y-8">
            <div class="space-y-4">

                <div class="w-20 border-t-8 border-yellow-500 right"></div>
                <h2 class="text-4xl font-bold text-yellow-600">
                    {{ 'title_heading'|trans|raw }}
                </h2>
                <h2 class="text-2xl font-semibold text-yellow-700">
                    {{ 'subtitle'|trans }}
                </h2>
            </div>

            <div class="hidden lg:block">
                <img src="{{ asset('images/mig_about.webp') }}" alt="foto webudvikler martin kristiansen" class="w-full max-w-sm rounded-xl shadow animate-fade-in" />
            </div>
        </div>

        <!-- Right: Timeline -->
        <div class="lg:w-1/2 relative pl-8 space-y-10 text-[1.125rem] border-l-2 border-yellow-500">

            <!-- Intro paragraph -->
            <div class="relative">
                <div class="absolute -left-10  top-2 w-3 h-3 bg-yellow-500 rounded-full opacity-0"></div>
                <div class="bg-yellow-50 border border-yellow-200 rounded-md p-5 shadow-sm">
                    <p class="text-lg leading-relaxed text-yellow-900">
                        <span class="block text-yellow-700 font-bold text-xl mb-2">{{ 'job_title'|trans }}</span>
                        {{ 'intro_text'|trans }}
                    </p>
                    <p class="mt-4 text-yellow-800">
                        {{ 'cta'|trans|raw }}
                    </p>
                </div>
            </div>

            <!-- Timeline title -->
            <div class="relative">
                <div class="absolute -left-10  top-2 w-3 h-3 bg-yellow-500 rounded-full opacity-0"></div>
                <h2 class="text-xl font-bold text-yellow-700 mt-4">{{ 'timeline_title'|trans }}</h2>
            </div>

            <!-- Timeline Entry: 2019 -->
            <div class="relative">
                <div class="absolute -left-10  top-1 w-3 h-3 bg-yellow-500 rounded-full"></div>
                <p class="text-sm font-bold text-yellow-700 mb-1">2019</p>
                <p>{{ 'year_2019'|trans|raw }}</p>
            </div>

            <!-- Timeline Entry: 2021 -->
            <div class="relative">
                <div class="absolute -left-10 top-1 w-3 h-3 bg-yellow-500 rounded-full"></div>
                <p class="text-sm font-bold text-yellow-700 mb-1">2021</p>
                <p>{{ 'year_2021'|trans|raw }}</p>
            </div>

            <!-- Timeline Entry: 2022 -->
            <div class="relative">
                <div class="absolute -left-10  top-1 w-3 h-3 bg-yellow-500 rounded-full"></div>
                <p class="text-sm font-bold text-yellow-700 mb-1">2022</p>
                <p>{{ 'year_2022_1'|trans|raw }}</p>
                <p>{{ 'year_2022_2'|trans|raw }}</p>
            </div>

            <!-- Timeline Entry: 2023 -->
            <div class="relative">
                <div class="absolute -left-10  top-1 w-3 h-3 bg-yellow-500 rounded-full"></div>
                <p class="text-sm font-bold text-yellow-700 mb-1">2023</p>
                <p>{{ 'year_2023_1'|trans|raw }}</p>
                <p>{{ 'year_2023_2'|trans|raw }}</p>

            </div>

            <!-- Timeline Entry: 2025 -->
            <div class="relative">
                <div class="absolute -left-10  top-1 w-3 h-3 bg-yellow-500 rounded-full"></div>
                <p class="text-sm font-bold text-yellow-700 mb-1">2025</p>
                <p>{{ 'year_2025'|trans|raw }}</p>
            </div>

            {% if app.request.locale == 'da' %}
                <div class="relative">
                    <a href="{{ asset('cv/Martin-KristiansenCV.pdf') }}"
                       download
                       class="inline-block bg-yellow-800 hover:bg-yellow-500 text-white font-semibold py-3 px-6 rounded-lg shadow transition-all duration-200">
                        {{ 'download_cv'|trans }}
                    </a>
                </div>
            {% endif %}


        </div>

    </div>
</section>
