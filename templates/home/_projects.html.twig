{% trans_default_domain 'projects' %}
<section id="projects" class="mt-40 py-24 bg-white text-yellow-900 eb-garamond-regular px-6 text-base leading-relaxed">
    <div class="max-w-6xl mx-auto space-y-12">

        <!-- Section Heading -->
        <div class="space-y-4">
            <div class="w-20 border-t-8 border-yellow-500"></div>
            <h2 class="text-4xl font-bold text-yellow-600">{{ 'heading'|trans }}</h2>
        </div>

        <!-- Project Grid -->
        <div class="grid sm:grid-cols-1 lg:grid-cols-2 gap-8">

            <!-- Project Card 1 -->
            <div class="bg-yellow-50 border border-yellow-500 ring-2 ring-yellow-700 rounded-2xl shadow-lg overflow-hidden flex flex-col transition duration-300 hover:ring-yellow-600 group">
                <!-- Image -->
                <div class="overflow-hidden">
                    <img src="{{ asset('images/hest-test.png') }}"
                         alt="Hest Test"
                         class="w-full h-56 object-cover transition-transform duration-300 group-hover:scale-105" />
                </div>

                <!-- Content -->
                <div class="p-6 space-y-3 flex flex-col flex-grow justify-between">
                    <!-- Title + Type -->
                    <div class="space-y-1">
                        <h3 class="text-2xl font-bold text-yellow-700">{{ 'project_1.title'|trans }}</h3>
                        <p class="text-xs font-semibold text-yellow-800 uppercase tracking-wider">{{ 'project_1.type'|trans }}</p>
                    </div>

                    <!-- Description -->
                    <p class="text-yellow-900 text-[1.05rem]">
                        {{ 'project_1.description'|trans }}
                    </p>
                </div>

                <!-- Technology Icons -->
                <div class="bg-yellow-100 px-4 py-3 flex flex-wrap items-center gap-2">
                    {# unchanged techIcons logic here #}
                </div>
            </div>

            <!-- Project Card 2 -->
            <div class="bg-yellow-50 border border-yellow-500 ring-2 ring-yellow-700 rounded-2xl shadow-lg overflow-hidden flex flex-col transition duration-300 hover:ring-yellow-600 group">
                <!-- Image -->
                <div class="overflow-hidden">
                    <img src="{{ asset('images/architect-site.png') }}"
                         alt="Arkitekt Site"
                         class="w-full h-56 object-cover transition-transform duration-300 group-hover:scale-105" />
                </div>

                <!-- Content -->
                <div class="p-6 space-y-3 flex flex-col flex-grow justify-between">
                    <!-- Title + Type -->
                    <div class="space-y-1">
                        <h3 class="text-2xl font-bold text-yellow-700">{{ 'project_2.title'|trans }}</h3>
                        <p class="text-xs font-semibold text-yellow-800 uppercase tracking-wider">{{ 'project_2.type'|trans }}</p>
                    </div>

                    <!-- Description -->
                    <p class="text-yellow-900 text-[1.05rem]">
                        {{ 'project_2.description'|trans }}
                    </p>
                </div>

                <!-- Technology Icons -->
                <div class="bg-yellow-100 px-4 py-3 flex flex-wrap items-center gap-2">
                    {# unchanged techIcons logic here #}
                </div>
            </div>

        </div>
    </div>
</section>
